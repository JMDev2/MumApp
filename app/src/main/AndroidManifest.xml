<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.moringaschool.mumapp">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MumApp"
        tools:targetApi="31">
        <activity
            android:name=".ui.ChatThreadActivity"
            android:exported="false" />
        <activity
            android:name=".ui.MessagingActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ChatActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.AddArticleActivity"
            android:exported="false" />
        <activity
            android:name=".ui.HomeDisplayActivity"
            android:exported="false" />
        <activity
            android:name=".ui.ChildDetailActivity"
            android:exported="false" />
        <activity
            android:name=".ui.StatusActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SplashScreen"
            android:exported="true" >

       </activity>
        <activity
            android:name=".ui.UserProfile"
            android:exported="false" />
        <activity
            android:name=".ui.MainActivity"
            android:exported="false"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".HomeActivity"
            android:exported="false" />
        <activity
            android:name=".ui.IntroActivity"
            android:exported="false" />
        <activity
            android:name=".ui.LoginActivity"
            android:exported="false" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>